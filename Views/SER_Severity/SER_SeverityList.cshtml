@{
    ViewData["Title"] = "Severity List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data
@model DataTable
<div>
    <div class="row loc1">
        <div class="col"><a class="ca" asp-controller="CAU_Cause" asp-action=""><button class="btn btn-dark btn-lg">Cause</button></a></div>
        <div class="col"><a class="ca" asp-controller="LOC_Location" asp-action="Index"><button class="btn btn-dark btn-lg">Location</button> </a></div>
        <div class="col"><a class="ca" asp-controller="MST_Accident" asp-action="Index"><button class="btn btn-dark btn-lg">Accident</button></a></div>
        <div class="col"><a class="ca" asp-controller="PER_Hospital" asp-action="Index"><button class="btn btn-dark btn-lg">Hospital</button></a></div>
        <div class="col"><a class="ca" asp-controller="PER_Person" asp-action="Index"><button class="btn btn-dark btn-lg">Person</button></a></div>
        <div class="col"><a class="ca" asp-controller="PER_Vehicle" asp-action="Index"><button class="btn btn-dark btn-lg">Vehicle</button></a></div>
        <div class="col"><a class="ca" asp-controller="SER_Severity" asp-action="Index"><button class="btn btn-dark btn-lg">Severity</button></a></div>
        <div class="col"><a class="ca" asp-controller="WET_Weather" asp-action="Index"><button class="btn btn-dark btn-lg">Weather</button></a></div>
    </div>
</div>
<div style="background-color:#ABBAEA" align="center" class="fw-bold fs-3">✽ Severity List ✽</div>
<br />
<table>
    <tr>
        <th><a asp-controller="SER_Severity" asp-action="Add" class="btn add btn-primary">✚ Add Severity</a></th>
        <th>
            <div class="border border-1 border-dark" style="position: relative;right: -341%;">
                <input type="text" class="form-control" id="sample_1" placeholder=" 🔍 Search here..." aria-controls="sample_1">
            </div>
        </th>
    <tr>
</table>
<br />

<div>
    <div class="row loc">
        <div class="col"><a class="ca" asp-controller="CAU_Cause" asp-action="">Cause</a></div>
        <div class="col"><a class="ca" asp-controller="LOC_Location" asp-action="Index">Location</a></div>
        <div class="col"><a class="ca" asp-controller="MST_Accident" asp-action="Index">Accident</a></div>
        <div class="col"><a class="ca" asp-controller="PER_Hospital" asp-action="Index">Hospital</a></div>
        <div class="col"><a class="ca" asp-controller="PER_Person" asp-action="Index">Person</a></div>
        <div class="col"><a class="ca" asp-controller="PER_Vehicle" asp-action="Index">Vehicle</a></div>
        <div class="col"><a class="ca" asp-controller="PER_Severity" asp-action="Index">Severity</a></div>
        <div class="col"><a class="ca" asp-controller="PER_Weather" asp-action="Index">Weather</a></div>
    </div>
</div>
<table class="table table-responsive table-sm table-striped table-hover table-bordered" id="sample_1">
    <thead>
        <tr align="center">
            <th>Action</th>
            <th>SeverityID</th>
            <th>SeverityDescription</th>
            <th>CreationDate</th>
            <th>ModificationDate</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr align="center" id="sample_1">
                    <td class="d-flex justify-content-center">
                      <form method="post" asp-controller="SER_Severity" asp-action="Delete">
                        <input type="hidden" name="SeverityID" value="@Convert.ToInt32(dr["SeverityID"])" />
                        <button  type="submit" class="btn btn-danger my-3 mx-2" onclick="return confirm('Are you sure you want to delete?')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                            </svg>
                        </button>
                      </form>
                      <form method="post" asp-controller="SER_severity" asp-action="Add">
                        <input type="hidden" name="SeverityID" value="@Convert.ToInt32(dr["SeverityID"])" />
                        <button type="submit" class="btn btn-secondary my-3 mx-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </button>
                      </form>

                    </td>
                    <td>@dr["SeverityID"]</td>
                    <td>@dr["SeverityDescription"]</td>
                    <td>@Convert.ToDateTime(dr["CreationDate"]).ToString("dd-MM-yyyy")</td>
                    <td>@Convert.ToDateTime(dr["ModificationDate"]).ToString("dd-MM-yyyy")</td>
                 
                </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_1 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
